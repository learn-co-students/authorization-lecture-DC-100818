<%= form_for @user do |f| %>
  <%= f.label :name, "Name:" %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :hometown, "Hometown:" %><br>
  <%= f.text_field :hometown %><br><br>

  <%= f.label :favorite_cryptid, "Favorite Cryptid:" %><br>
  <%= f.text_field :favorite_cryptid %><br><br><br>

  <%= f.submit submit_text %>
<% end %>
